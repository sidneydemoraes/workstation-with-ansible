export LESS_TERMCAP_mb=$(tput bold; tput setaf 10)            # begin blinking
export LESS_TERMCAP_md=$(tput bold; tput setaf 14)            # begin bold
export LESS_TERMCAP_us=$(tput smul; tput bold; tput setaf 7)  # begin underline
export LESS_TERMCAP_so=$(tput bold; tput setaf 11)            # begin standout-mode - info box
export LESS_TERMCAP_me=$(tput sgr0)                           # end mode
export LESS_TERMCAP_ue=$(tput rmul; tput sgr0)                # end underline
export LESS_TERMCAP_se=$(tput rmso; tput sgr0)                # end standout-mode
